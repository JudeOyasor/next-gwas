params{

    /* Directories */
    work_dir    = "/$PWD"
    input_dir   = "${params.work_dir}/inputs/"
    output_dir  ="${params.work_dir}/results/"
    script_dir  ="${params.work_dir}/scripts/"
    input_pat   =["yri-thin"] //"HapMap_3_r3_1"]

    /* Analysis Parameters */
    
    // Number of Permutations
    mperm = 100
}

profiles{

    standard{
        process.executor = "local"
    }

    slurm{
        process.executor = "slurm"
        process.queue = "batch"
    }

    pbs {
        process.executor = "pbs"
        process.queue = "batch"
    }
}
